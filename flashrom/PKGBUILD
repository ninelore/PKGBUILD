# Maintainer: Ingo Reitz <ninelore@protonmail.com>
pkgname=flashrom
pkgver=1.3.0
pkgrel=1
pkgdesc="flashrom is a utility for detecting, reading, writing, verifying and erasing flash chips"
arch=('x86_64' 'aarch64')
url="https://www.flashrom.org/"
license=('GPL-2.0-only')
depends=()
makedepends=('gcc' 'pkg-config' 'pciutils' 'libusb' 'libftdi' 'libjaylink')
source=("https://github.com/flashrom/flashrom/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=(SKIP)

build() {
	cd "$srcdir/$pkgname-$pkgver/"
    make
}

package() {
	cd "$srcdir/$pkgname-$pkgver/"
    make DESTDIR="${pkgdir}" install
}
